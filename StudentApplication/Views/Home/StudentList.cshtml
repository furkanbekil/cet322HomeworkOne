@model List<Student>
@{
    ViewData["Title"] = "Student List";
}

<h2>ShowStudent</h2>
<div class="row">


    @foreach (var item in @Model)
    {
    
        <div class="card col-lg-3">
            <img class="card-img-top" src="@item.picture">
            <div class="card-body">
                <h5 class="card-title">@item.name @item.surname</h5>
                <p class="card-text"> @item.schoolname </p>
                <a asp-controller="Home" asp-action="Detay" asp-route-id="@item.Id" class="btn btn-primary">Detay</a>
            </div>
        </div>
    
    }
    
</div>

